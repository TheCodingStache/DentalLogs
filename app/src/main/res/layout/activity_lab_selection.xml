<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LabSelectionActivity">

    <RelativeLayout
        android:id="@+id/internalRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Παρακαλώ επιλέξτε εργαστήριο"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lab1"
            android:layout_marginTop="100dp"
            android:layout_marginStart="70dp"
            android:layout_width="220dp"
            android:layout_height="180dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"
            app:civ_border_overlay="true"
            android:src="@drawable/lab1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:text="Laboratory 1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/lab1"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lab2"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:layout_below="@id/lab1"
            android:layout_marginStart="70dp"
            android:layout_marginTop="80dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"
            android:src="@drawable/lab2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:text="Laboratory 2"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/lab2"/>

    </RelativeLayout>
</RelativeLayout>