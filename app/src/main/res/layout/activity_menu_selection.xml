<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="horizontal"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkGrey">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/lab" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Πληροφορίες Ασθενή"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".5"
                    android:hint="Όνομα"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lastnameText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".5"
                    android:hint="Επώνυμο"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".5"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".5"
                    android:inputType="text" />
            </LinearLayout>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Ημερομηνία Παραλαβής: "
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <DatePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/sexText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Γένος Ασθενή"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:weightSum="1">

                <RadioGroup
                    android:id="@+id/sexGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Άνδρας" />

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Γυναίκα" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/shapeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Σχήμα προσώπου"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/faceGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/triangle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Τρίγωνο" />

                    <RadioButton
                        android:id="@+id/square"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Τετράγωνο" />

                    <RadioButton
                        android:id="@+id/circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Κυκλικό" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                android:id="@+id/kindOfWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Είδος Εργασίας"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/jobGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/kinitiCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Κινητή" />

                    <RadioButton
                        android:id="@+id/akinitiCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ακίνητη" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/thermoplastiki"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:spinnerMode="dialog" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/PMMA"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/metallo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:spinnerMode="dialog" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/zirkonia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/atomikovasiko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/atomiko"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ατομικό Δισκάριο"/>

                <RadioButton
                    android:id="@+id/vasiki"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Βασική Πλάκα"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:text="Χρώμα"
                android:textColor="@color/black"
                android:textSize="24sp" />


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <RadioGroup
                    android:id="@+id/color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/a1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/a1" />

                    <RadioButton
                        android:id="@+id/a2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/a2" />

                    <RadioButton
                        android:id="@+id/a35"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/a35" />

                    <RadioButton
                        android:id="@+id/a4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/a4">

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/b1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/b1" />

                    <RadioButton
                        android:id="@+id/b2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/b2"></RadioButton>

                    <RadioButton
                        android:id="@+id/b3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/b3">

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/b4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/b4" />


                    <RadioButton
                        android:id="@+id/c1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/c1" />

                    <RadioButton
                        android:id="@+id/c2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/c2" />

                    <RadioButton
                        android:id="@+id/c3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/c3" />

                    <RadioButton
                        android:id="@+id/c4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/c4" />

                    <RadioButton
                        android:id="@+id/d2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/d2" />

                    <RadioButton
                        android:id="@+id/d3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/d3" />

                    <RadioButton
                        android:id="@+id/d4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/d4" />
                </RadioGroup>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:text="Επιλογή Δοντιών"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/teeth">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Σχόλια"
                    android:inputType="textLongMessage" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Επιλογή Φωτογραφίας"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:cropToPadding="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/camera" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="αποστολη"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="55dp"
        android:background="@color/darkBlue"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="true"
        android:src="@drawable/chat_new_white"
        android:visibility="visible"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp" />

</RelativeLayout>
